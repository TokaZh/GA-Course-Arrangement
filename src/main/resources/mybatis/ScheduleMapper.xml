    <resultMap id="ScheduleMap" type="Schedule">
        <id property="scheduleId" column="schedule_id"/>
        <result property="courseId" column="course_id"/>
        <result property="teacherId" column="teacher_id"/>
        <result property="classId" column="class_id"/>
        <result property="timePart" column="time_part"/>
        <result property="classRoomId" column="classroom_id"/>
    </resultMap>


    <select id="selectScheduleByClassId" parameterType="int" resultMap="ScheduleMap">
        select *
        from schedule
        where class_id = #{classId}
    </select>

    <select id="selectScheduleByTeacherId" parameterType="int" resultMap="ScheduleMap">
        select *
        from schedule
        where teacher_id = #{teacherId}
    </select>

