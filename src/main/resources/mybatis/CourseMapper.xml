    <insert id="addCourse" parameterType="Course">
        insert into course(course_id, course_name, score, time, type, major_id)
        values (#{courseId}, #{courseName}, #{score}, #{time}, #{type}, #{majorId})
    </insert>

    <delete id="deleteCourseByCourseId" parameterType="int">
        delete
        from course
        where course_id = #{courseId}
    </delete>
